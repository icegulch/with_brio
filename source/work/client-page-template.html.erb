<% content_for :title, client.name %>
<% content_for :og_desc, client.blurb %>
<% content_for :og_img, 'https://withbr.io/images/og/' + client.slug + '.png' %>


    <header class="page-header">
      <div class="container-fluid container-fluid--maxwidth">
        <div class="row">
          <div class="col col-lg-12 col-xl-8">
            <div class="page-header__title">
                <%= client.name %>
            </div>
            <div class="page-header__lede">
                <%= !client.desc.blank? ? product.blurb : lorem.words(19) %>
            </div>
            <div class="page-header__blurb">
                <%= !client.blurb.blank? ? client.blurb : lorem.words(120) %>
            </div>
          </div>
        </div>
      </div>
    </header>

    <section class="page-section page-section--compact-top">
      <div class="container-fluid container-fluid--maxwidth">
        <div class="card-columns">
          <% 6.times.each_with_index do |i, pic| %>
            <% random_height = rand(250...600).to_s %>
            <figure class="card">
              <%= image_tag(lorem.image('600x'+random_height), :class => 'img-fluid') %>
              <figcaption>
                <%= lorem.words(3) %>
              </figcaption>
            </figure>
          <% end %>
        </div>
      </div>
    </section>

