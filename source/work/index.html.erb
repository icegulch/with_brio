    <section class="page-section page-section-work">
      <div class="container">
        <%= image_tag('bobbles.svg', :class => 'bobbles') %>
        <div class="showcase">
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <article class="text-centered">
                
              </article>
            </div>
          </div>
          <% 
              clients = ['lagrange.jpg', 'su2c.png', 'fitness-together.png', 'fullers.jpg', 'gnip.png', 'heavybit.png', 'trelora.png', 'uscm.png', 'bigboulder.png', 'frenzy.png', 'su2c-2.png', 'cfp.png', 'org-dev.png', 'great-minds.png', 'periodic.jpg']
              clients.each.with_index do |client, i|
          %>
            <div class="showcase-row">
              <% if i % 2 == 0 %>
                <div class="row">
                  <article class="col-md-5">
                    <h5 class="heading-primary">
                      <%= lorem.words(5) %>
                    </h5>
                    <%= simple_format(lorem.paragraph) %>
                  </article>
                  <figure class="col-md-6 pull-right">
                    <%= image_tag('work/' + client.to_s, :class => 'img-responsive') %>
                  </figure>
                </div>
              <% else %>
                <div class="row">
                  <article class="col-md-5 pull-right">
                    <h5 class="heading-primary">
                      <%= lorem.words(5) %>
                    </h5>
                    <%= simple_format(lorem.paragraph) %>
                  </article>
                  <figure class="col-md-6">
                    <%= image_tag('work/' + client.to_s, :class => 'img-responsive') %>
                  </figure>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <section class="page-section page-section-contact">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <h2 class="heading heading-primary">
              Contact
            </h2>
            <form class="contact-form" name="contact" action="thank-you">
              <div class="form-field">
                <label class="form-label">
                  First Name
                </label>
                <input type="text" name="first_name">
              </div>
              <div class="form-field">
                <label class="form-label">
                  Last Name
                </label>
                <input type="text" name="last_name">
              </div>
              <div class="form-field">
                <label class="form-label">
                  Email
                </label>
                <input type="email" name="email">
              </div>
              <div class="form-field">
                <label class="form-label">
                  Your message
                </label>
                <textarea name="message"></textarea>
              </div>
              <div class="form-field form-field-submit">
                <button class="button-submit">
                  Send
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

