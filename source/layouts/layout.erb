<!doctype html>
<html lang="en-us">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1"> 
    <meta name="description" content="With Brio is a tiny creative studio specializing in design and frontend development for everything from Rails apps to brochure sites.">
    <title><%= !current_page.data.title.blank? ? current_page.data.title + " | With Brio" : "With Brio" %></title>
    <%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Crimson+Text|Open+Sans', 'styles' %>
    <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', :integrity => 'sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', :crossorigin => 'anonymous' %>
    <%= yield_content :style %>
    <%= javascript_include_tag '//code.jquery.com/jquery-3.2.1.slim.min.js', :integrity => 'sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', :crossorigin => 'anonymous' %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', :integrity => 'sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', :crossorigin => 'anonymous' %>
    <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', :integrity => 'sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', :crossorigin => 'anonymous' %>
    <%= favicon_tag 'icons/favicon.ico', rel: 'icon', type: 'image/ico' %>
    <meta name="google-site-verification" content="4PckrMMHrmqaUBLFPM1IltvjrqpUTGfSAyyUm07uY4c" />
    <%= partial 'layouts/og' %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= partial "layouts/svgsprite" if current_page.url == '/work/' %>

    <header id="site-header">
      <%= partial "layouts/header" %>
    </header>

    <main id="site-main" role="main">
      <%= yield %>
    </main>
    
    <footer id="site-footer">
      <%= partial "layouts/footer" %>
    </footer>

  </body>
</html>